# API de Google Gemini - REQUERIDA para el análisis de imágenes
# Obtén tu clave API en: https://ai.google.dev/
GOOGLE_GENAI_API_KEY=tu_clave_api_aqui

# APIs de clima - Al menos una es recomendada para funcionalidades climáticas
# OpenWeatherMap: https://openweathermap.org/api
OPENWEATHERMAP_API_KEY=tu_clave_api_aqui

# Visual Crossing: https://www.visualcrossing.com/weather-api
VISUALCROSSING_API_KEY=tu_clave_api_aqui

# WeatherAPI: https://www.weatherapi.com/
WEATHERAPI_KEY=tu_clave_api_aqui

# Aeris Weather: https://www.aerisweather.com/
AERISWEATHER_CLIENT_ID=tu_client_id_aqui
AERISWEATHER_CLIENT_SECRET=tu_client_secret_aqui

# Configuración de la aplicación
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENABLE_CLIENT_AI=false
NEXT_PUBLIC_ENABLE_GEOLOCATION=true
